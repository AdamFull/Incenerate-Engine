{
	version: 450;

	enable_extensions: [
		"GL_ARB_separate_shader_objects"
	];

	definitions: [];
	require_extensions: [];
	includes: [];

	code: 
	"""
		layout (binding = 0) uniform sampler2D samplerColor;

		layout (location = 0) in vec2 inUV;
		layout (location = 0) out vec4 outColor;
		
		void main() 
		{
		    outColor = vec4(texture(samplerColor, inUV).rgb, 1.0);
		}
	""";
}